{% extends 'base.html.twig' %}

{% block title %}Список чатов{% endblock %}

{% block body %}
    <div class="container">
        <h1>Список чатов</h1>
        <ul class="list-group mb-3">
            {% for chat in chats %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <a href="{{ path('chat_view', {'id': chat.id}) }}">{{ chat.name }}</a>
                    <span class="badge badge-secondary">{{ chat.last }}</span>
                </li>
            {% else %}
                <li class="list-group-item">Нет доступных чатов</li>
            {% endfor %}
        </ul>

        <h2>Создать новый чат</h2>
        {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}

        <div class="form-group mb-2">
            {{ form_label(form.name, 'Название чата', {'label_attr': {'class': 'sr-only'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Название чата'}}) }}
            {{ form_errors(form.name) }}
        </div>

{#        <div class="form-group mb-2 ml-2">#}
{#            {{ form_label(form.user, 'Собеседник', {'label_attr': {'class': 'sr-only'}}) }}#}
{#            {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}#}
{#            {{ form_errors(form.user) }}#}
{#        </div>#}

        <button type="submit" class="btn btn-primary mb-2 ml-2">Создать чат</button>
        {{ form_end(form) }}

        <div class="mb-3" style="margin-top: 15px">
            <a href="{{ path('home') }}" class="btn btn-secondary">Назад</a>
        </div>
    </div>
{% endblock %}
